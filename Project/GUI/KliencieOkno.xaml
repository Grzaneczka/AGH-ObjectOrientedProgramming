        <Button x:Name="Button_DodajK" Content="Dodaj" HorizontalAlignment="Left" Height="40" Margin="55,320,0,0" VerticalAlignment="Top" Width="100" Click="Button_DodajK_Click" Background="#FF645757" FontWeight="Bold"/>
        <Button Content="Powrot" HorizontalAlignment="Left" Height="40" Margin="620,320,0,0" VerticalAlignment="Top" Width="105" Click="Button_Click" Background="#FF645757" FontWeight="Bold"/>

    </Grid>
